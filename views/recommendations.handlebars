<div class="recommendation uk-section uk-section-medium uk-section-muted header uk-background-fixed">
    <h1 class="recPlaces uk-heading-medium uk-text-center">Places to Visit</h1>
    <div class="mason uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-medium uk-grid-row-large uk-flex uk-padding-large" data-uk-scrollspy="target: > div; cls:uk-animation-slide-bottom-medium; delay: 400;" uk-grid="masonry: true">
        {{#each recommendation as |rec|}}
        <div>
            <div class="recCards uk-card uk-card-default uk-flex uk-flex-center uk-flex-middle uk-flex-column uk-padding">
                <h3 class="recTitle uk-text-center mb-0 uk-margin-remove-bottom">{{rec.title}}</h3>
                <p class="recLocations">Located in {{rec.location}}</p>
                <a class="recLinks" href="{{rec.link}}" target="_blank">{{rec.link}}</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>

