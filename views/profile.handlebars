    <div class="sticky" style="z-index: 980;" uk-sticky="left: #offset">
        <section id="profilePictureSec">
            <div class="uk-container">
                <div class="uk-column-1-2">
                    <!-- profile picture section -->
                    <div id="profilePic-sec">
                        <h2 class="uk-heading-medium"></h2>
