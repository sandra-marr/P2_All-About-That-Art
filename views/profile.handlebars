    <div class="uk-container">
        <div class="uk-column-1-3">
            <!-- profile picture section -->
                <!-- src should be the pic user adds -->
            <img src="https://img.icons8.com/ios-filled/100/000000/artist.png" id="profilePic-sec" alt="usersPhoto"/>
        </div>
        <!-- artist bio section -->
        <div class="uk-column-2-3">
                <div class="artistProf" data-id="{{user.id}}"></div>
                <h2 class="uk-heading-medium" id="artistHeader"></h2>
                <h3 class="uk-heading-medium" id="artistUsername"> {{user.user_name}}</h3>
                <h3>Preferred Media: {{user.media}}</h3>
                <div class="socialButtons">
                    <a href="" class="uk-icon-button uk-margin-small-right" uk-icon="twitter"></a>
                    <a href="" class="uk-icon-button  uk-margin-small-right" uk-icon="facebook"></a>
                    <a href="" class="uk-icon-button  uk-margin-small-right" uk-icon="instagram"></a>
                    <a href="mailto:{{ email }}" class="uk-icon-button  uk-margin-small-right" uk-icon="mail"></a>
                </div>
                <p class="aboutTxt">{{user.bio}}
                </p>
            </div>
            </div>
    </div>
    <!--container for gallery-->
    <section class="uk-container uk-container-xsmall gallery-section">
        <div class="card-container uk-flex uk-flex-wrap-between uk-grid-column-medium uk-child-width-1-3@m uk-grid-row-medium"
            uk-grid>           
            <!-- card 1 -->
            {{#each user.artworks as |artwork|}}
            <div class="entireCard uk-card uk-card-hover uk-card-small">
                <div class="uk-card-media-top">
                    
                    <img src="{{artwork.path}}" alt="">
                    {{!-- {{/each}} --}}
                </div>
                <div class="uk-card-body">
                    <h3 class="uk-card-title">{{artwork.name}}</h3>
                    <p>{{artwork.description}}
                    </p>
                </div>
            </div>
            {{/each}}
            <!-- card 2 -->
           
                </div>
            </div>
        </div>
    </section>


<script src="/js/profile.js"></script>
