<div class="uk-section uk-section-xlarge uk-section-default">
    <p class="matrixCategoryHeader uk-text-center">Art Category {{art.category}}</p>
    <p class="matrixSubCategory uk-text-center">Select The Image You Would Like To View</p>
    <div class="matrixCards uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-medium uk-grid-row-large uk-flex uk-padding-large artwork" data-uk-scrollspy="target: > div; cls:uk-animation-slide-bottom-medium; delay: 400;" uk-grid="masonry: true">
        {{#each artworks as |art|}}
        <div data-id="{{art.id}}">
            <div class="uk-card uk-card-default uk-flex uk-flex-center uk-flex-middle" data-id="{{art.id}}"><img class="matrixImages" data-id="{{art.id}}" src="{{art.path}}"/></div>
        </div>
        {{/each}}
    </div>
</div>
<script type="text/javascript" src="/js/matrix.js"></script>
