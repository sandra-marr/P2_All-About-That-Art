<!-- xlarge section, background to entire viewport, flex container, flex items along main axis -->
 <div class="signUpBackground uk-section uk-section-xlarge uk-section-default uk-flex uk-flex-center" uk-height-viewport>
        <!-- fills 100% of available width -->
        <div class="uk-width-1-1">
            <!-- align & centers content inside -->
            <div class="uk-container">
                <!-- margin adds top/bottom padding, auto horizontally centers flex elements, fixed xl width, sets up card for form, body creates padding between card & content -->
                <div class="signupForm uk-margin uk-margin-auto uk-width-xlarge uk-card uk-card-default uk-card-body">
                            
                    <!-- Title of sign up card -->
                    <h3 class="signUpForFree uk-card-title uk-text-center uk-text-bold">Sign Up for Free!</h3>
                    <br>
                    <form class="signup-form">
                        <div class="uk-margin">
                            <!-- spans entirety of card -->
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                <input class="uk-input uk-form-large" type="text" id="name-signup" placeholder="Full Name">
                            </div>
                        </div>
                                
                        <div class="uk-margin">
                            <!-- spans entirety of card -->
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon" uk-icon="icon: mail"></span>
                                <input class="uk-input uk-form-large" type="text" id="email-signup" placeholder="Email address">
                            </div>
                        </div>
                                
                        <div class="uk-margin">
                            <!-- spans entirety of card -->
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                <input class="uk-input uk-form-large" id="password-signup" type="password" placeholder="Password">
                                <i class="bi bi-eye-slash" id="togglePassword"></i>
                            </div>
                        </div>

                        <div class="uk-margin uk-text-small">
                            <label><input class="uk-checkbox" type="checkbox"> Artist account?</label>
                                
                        <div class="uk-margin">
                            <button class="signUpButton uk-button uk-button-secondary uk-button-large uk-width-1-1 uk-text-bold" type="submit">Sign Up</button>
                        </div>
                                
                        <div class="redirect-login uk-text-small uk-text-center">
                            Already registered? <a href="/login">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<script src="/js/signup.js"></script>