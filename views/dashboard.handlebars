
<!-- container for profile pic and bio -->
<!-- ```````````````````````````````````````````````````````````````````````````````````````````````````````````````````` -->
<div class="uk-container uk-margin-large">
    <div>
        <!-- profile pic  --> 
        <img class="uk-align-left uk-margin-remove-adjacent" src="/public/assets/images/Avatar.PNG" alt="Avatar">
        <!-- Bio  -->
        <h2>About me</h2>
        <h3>{{artist.name}}</h3>

        <p>{{artist.bio}}</p>
        <!-- Modal to update Bio-->
        <a class="uk-button uk-button-default" href="#modal-sections" uk-toggle>Update Bio</a>

        <div id="modal-sections" uk-modal>
            <div class="uk-modal-dialog">
                <button class="uk-modal-close-default" type="button" uk-close></button>
                <div class="uk-modal-header">
                    <h2 class="uk-modal-title">update Bio</h2>
                </div>
                <div class="uk-modal-body">
                    <form>
                        <fieldset class="uk-fieldset">
                            <div class="uk-margin">
                                <textarea class="uk-textarea" rows="5" placeholder="Textarea" id="text"></textarea>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="uk-modal-footer uk-text-right">
                    <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
                    <button class="uk-button uk-button-primary" type="button" id="updateBio">Save</button>
                </div>
            </div>
        </div>
    </div>

</div>
