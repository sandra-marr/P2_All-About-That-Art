    <div>
        <div class="uk-container">
            <div class="uk-column-1-1@s uk-column-1-2 uk-column-divider">
                <img class="uk-align-center" id="profilePic-sec" src="https://img.icons8.com/ios-filled/100/000000/artist.png" height="150" width="150" alt="usersPhoto"/>
                <h2 class="uk-align-center uk-text-center">{{user_name}}</h2>
                <br><br>
                <h3>About Me</h3>
                <h4>{{user_name}}</h4>
                <p class="aboutTxt">{{bio}}</p>
                <h4>My Contact Information</h4>
                <div class="socialButtons">
                    <a href="{{user.twitter}}" class="uk-icon-button uk-margin-small-right" uk-icon="twitter"></a>
                    <a href="{{user.facebook}}" class="uk-icon-button  uk-margin-small-right" uk-icon="facebook"></a>
                    <a href="{{user.instagram}}" class="uk-icon-button  uk-margin-small-right" uk-icon="instagram"></a>
                    <a href="{{user.linkedIn}}" class="uk-icon-button  uk-margin-small-right" uk-icon="linkedin"></a>
                    <a href="mailto:{{ user.email }}" class="uk-icon-button  uk-margin-small-right" uk-icon="mail"></a>
                </div>

                 <!-- Modal to update Bio-->
            <a class="uk-button uk-button-default" href="#modal-sections" uk-toggle>Update Bio</a>
            <div id="modal-sections" uk-modal>
                <div class="uk-modal-dialog">
                    <button class="uk-modal-close-default" type="button" uk-close></button>
                    <div class="uk-modal-header">
                        <h2 class="uk-modal-title">update user information</h2>
                    </div>
                    <div class="uk-modal-body">
                        <form>
                            <fieldset class="uk-fieldset">
                                <div class="uk-margin">
                                    <label for="email">Email</label>
                                    <input class="uk-text" rows="5" id="email"></input>
                                </div>
                                 <div class="uk-margin">
                                    <label for="email">LinkedIn</label>
                                    <input class="uk-text" rows="5" id="linkedin"></input>
                                </div>
                                 <div class="uk-margin">
                                    <label for="email">Instagram</label>
                                    <input class="uk-text" rows="5" id="instagram"></input>
                                </div>
                                 <div class="uk-margin">
                                    <label for="email">Artist Account</label>
                                    <input class="uk-checkbox" type="checkbox" id="artist"></input>
                                </div>
                                <div class="uk-margin">
                                    <label for="bio">Bio</label>
                                    <textarea class="uk-textarea" rows="5" id="text">{{bio}}</textarea>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="uk-modal-footer uk-text-right">
                        <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
                        <button class="uk-button uk-button-primary" type="button" id="updateBio">Save</button>
                    </div>
                </div>
            </div>
        </div>

            </div>
        </div>
    </div>
    <br><br>
    <!--container for gallery-->
    <div class="uk-container uk-container-xsmall gallery-section artwork"></div>
    <!-- Current Artwork slideshow-->
    <div class="uk-container uk-margin-large">
        <h1 class="uk-heading-small">Current Artwork </h1>

        <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider="sets: true">
            <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@m">
                {{#each user.artworks as |artwork|}}
                <li>
                    <img src="{{artwork.path}}" alt="{{artwork.description}}">
                    <div class="uk-position-center uk-panel"></div>
                </li>
                {{/each}}
            </ul>
            <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous
                uk-slider-item="previous"></a>
            <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next
                uk-slider-item="next"></a>
        </div>
    </div>
    <!-- Modal to add Artwork-->
    <a class="uk-button uk-button-default" href="#modal_sections" uk-toggle>Add New Artwork</a>
    <div id="modal_sections" uk-modal>
        <div class="uk-modal-dialog">
            <button class="uk-modal-close-default" type="button" uk-close></button>
            <div class="uk-modal-header">
                <h2 class="uk-modal-title">Upload Artwork</h2>
            </div>
            <div class="uk-modal-body">
                <form class=class="uk-form-stacked">
                    <div class="uk-margin">
                        <div uk-form-custom>
                            <input type="file" id="file">
                            <button class="uk-button uk-button-default" type="button" tabindex="-1">Select</button>
                        </div>
                    </div>
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-stacked-text"> Artwork Description</label>
                        <div class="uk-form-controls">
                            <input class="uk-input" id="form-stacked-text" type="text" placeholder="Enter Description">
                        </div>
                    </div>
                    <div class="uk-margin">
                        <label class="uk-form-label" for="category">Artwork Category</label>
                        <div class="uk-form-controls">
                            <select class="uk-select" id="category">
                                <option>Painting</option>
                                <option>Sculpture</option>
                                <option>Photographs</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="uk-modal-footer uk-text-right">
                <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
                <button class="uk-button uk-button-primary" type="button" id="addNewArt">Save</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/dashboard.js"></script>