<div class="uk-section uk-section-large uk-section-secondary">
    <div class="uk-container artwork" data-id="{{art.user_id}}">

        <h3 class="uk-text-center">Featured Artist</h3>
        <br><br>

        <div class="uk-grid uk-child-width-1-1@m" data-id="{{art.user_id}}" uk-grid>
            <p class="uk-text-center">Meet {{art.user.user_name}}, who prefers {{art.category}} as a media in exressing his creativity.</p>
            <div >
               <img class="uk-align-center" data-id="{{art.user_id}}" data-src="{{art.path}}" width="600" height="400" alt="" uk-img>
            </div>
            <p class="uk-text-center">Description: {{art.description}}</p>

        </div>
    </div>
</div>
