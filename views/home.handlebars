    <div class="uk-container">

        <h3 class="uk-text-center">Featured Artist</h3>
        <br><br><br>

        <div class="uk-grid uk-child-width-1-1@m" uk-grid>
            <div>
               <img data-src="{{art.path}}" width="600" height="400" alt="" uk-img>
            </div>

            <p class="uk-text-center">{{art.user.user_name}}</p>
            <p class="uk-text-center">{{art.category}}</p>
            <p class="uk-text-center">{{art.description}}</p>

        </div>
